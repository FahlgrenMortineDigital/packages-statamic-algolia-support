{
    "version": "0.0.1",
    "name": "fahlgrendigital/packages-statamic-algolia-support",
    "description": "Support for the Algolia driver in Statamic applications.",
    "type": "composer-plugin",
    "keywords": [
        "statamic",
        "cms",
        "flat file",
        "laravel"
    ],
    "autoload": {
        "psr-4": {
            "Fahlgrendigital\\PackagesStatamicAlgoliaSupport\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andrew Clinton",
            "email": "andrew.clinton@fahlgren.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.41",
        "statamic/cms": "^5.0",
        "league/csv": "^9.21.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Algolia Support",
            "description": "Support for the Algolia driver in Statamic applications."
        },
        "laravel": {
            "providers": [
                "Fahlgrendigital\\PackagesStatamicAlgoliaSupport\\AlgoliaServiceProvider"
            ]
        }
    }
}
